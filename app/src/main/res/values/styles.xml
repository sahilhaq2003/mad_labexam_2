<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- General text -->
    <style name="AppText.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#0A2E25</item>
    </style>

    <style name="AppText.SubTitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#0F6B53</item>
    </style>

    <!-- Rounded white card -->
    <style name="AppCard">
        <item name="android:background">@drawable/bg_card</item>
        <item name="android:padding">12dp</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Service button (icon + text stacked) -->
    <style name="ServiceItem">
        <item name="android:background">@drawable/bg_card</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">12dp</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Quick action button -->
    <style name="QuickAction">
        <item name="android:background">@drawable/bg_card</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">#0F6B53</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
