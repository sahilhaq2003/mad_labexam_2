<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_cream">

    <!-- Simple top bar -->
    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/space_lg"
        android:paddingBottom="@dimen/space_md"
        android:paddingStart="@dimen/space_lg"
        android:paddingEnd="@dimen/space_lg"
        android:text="@string/svc_weather_title"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/space_lg">

            <!-- Current conditions card -->
            <LinearLayout
                android:id="@+id/cardCurrent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_card_round"
                android:padding="@dimen/space_lg"
                android:elevation="2dp">

                <TextView
                    android:id="@+id/tvLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/home_weather_location"
                    android:textSize="14sp"
                    android:textColor="@color/text_muted" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/space_sm">

                    <TextView
                        android:id="@+id/tvTemperature"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="28°"
                        android:textSize="56sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary" />

                    <!-- Simple emoji icon to avoid any assets/deps -->
                    <TextView
                        android:id="@+id/tvEmoji"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="☀️"
                        android:textSize="40sp"
                        android:contentDescription="@string/cd_weather" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvCondition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/home_weather_summary"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary" />

                <LinearLayout
                    android:id="@+id/rowStats"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/space_lg">

                    <LinearLayout
                        android:id="@+id/boxRain"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:background="@drawable/bg_chip_soft"
                        android:padding="@dimen/space_md"
                        android:layout_marginEnd="@dimen/space_sm">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rain chance"
                            android:textSize="12sp"
                            android:textColor="@color/text_muted" />

                        <TextView
                            android:id="@+id/tvRainPercent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10%"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/green_primary" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/boxHumidity"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:background="@drawable/bg_chip_soft"
                        android:padding="@dimen/space_md"
                        android:layout_marginEnd="@dimen/space_sm">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Humidity"
                            android:textSize="12sp"
                            android:textColor="@color/text_muted" />

                        <TextView
                            android:id="@+id/tvHumidity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="64%"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/boxWind"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:background="@drawable/bg_chip_soft"
                        android:padding="@dimen/space_md">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Wind"
                            android:textSize="12sp"
                            android:textColor="@color/text_muted" />

                        <TextView
                            android:id="@+id/tvWind"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="12 km/h"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="end"
                    android:layout_marginTop="@dimen/space_md">

                    <Button
                        android:id="@+id/btnRefresh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/refresh" />
                </LinearLayout>
            </LinearLayout>

            <!-- Forecast header -->
            <TextView
                android:id="@+id/forecastHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3-Day Forecast"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginTop="@dimen/space_xl"
                android:layout_marginBottom="@dimen/space_md" />

            <!-- Horizontal forecast list, no RecyclerView -->
            <HorizontalScrollView
                android:id="@+id/forecastScroller"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/forecastContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" />
            </HorizontalScrollView>

            <!-- Tips / note -->
            <TextView
                android:id="@+id/tvNote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/health_updated_recent"
                android:textSize="12sp"
                android:textColor="@color/text_muted"
                android:layout_marginTop="@dimen/space_lg" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
