<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_cream">

    <!-- Top bar -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/space_lg"
        android:paddingEnd="@dimen/space_lg"
        android:paddingTop="@dimen/space_lg"
        android:paddingBottom="@dimen/space_md"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="←"
            android:textSize="20sp"
            android:padding="@dimen/space_sm" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="86dp"
            android:layout_marginStart="@dimen/space_md"
            android:layout_weight="1"
            android:text="@string/nav_offers"
            android:textColor="@color/text_primary"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnMyCoupons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Coupons" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/space_lg">

            <!-- Search + Filter -->
            <LinearLayout
                android:id="@+id/filterRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <EditText
                    android:id="@+id/etSearch"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:hint="@string/search_hint"
                    android:paddingStart="@dimen/space_md"
                    android:paddingEnd="@dimen/space_md"
                    android:background="@android:color/white"
                    android:singleLine="true" />

                <Button
                    android:id="@+id/btnFilter"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Filter"
                    android:layout_marginStart="@dimen/space_sm"/>
            </LinearLayout>

            <!-- Category chips (no deps) -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fillViewport="false"
                android:scrollbars="none"
                android:layout_marginTop="@dimen/space_md">

                <LinearLayout
                    android:id="@+id/chips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" />
            </HorizontalScrollView>

            <!-- Featured banner -->
            <LinearLayout
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/space_lg"
                android:layout_marginTop="@dimen/space_lg"
                android:background="@color/card_blue"
                android:elevation="2dp">

                <TextView
                    android:id="@+id/tvBannerTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="⚡ Limited-Time Mega Deal"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/tvBannerSub"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Save up to 25% on irrigation equipment today"
                    android:textColor="@color/white"
                    android:layout_marginTop="@dimen/space_xs"/>
            </LinearLayout>

            <!-- Trending -->
            <TextView
                android:id="@+id/tvTrendingTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Trending"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:layout_marginTop="@dimen/space_xl"
                android:layout_marginBottom="@dimen/space_sm" />

            <HorizontalScrollView
                android:id="@+id/trendingScroll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/trendingContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" />
            </HorizontalScrollView>

            <!-- All offers -->
            <TextView
                android:id="@+id/tvAllTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="All Offers"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:layout_marginTop="@dimen/space_xl"
                android:layout_marginBottom="@dimen/space_sm" />

            <LinearLayout
                android:id="@+id/offersContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <!-- Footer space -->
            <Space
                android:layout_width="match_parent"
                android:layout_height="60dp" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
