<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF6E9">

    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#0F6B53"
        android:orientation="vertical"
        android:padding="@dimen/space_lg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/support_title"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_badge_live"
                android:paddingHorizontal="@dimen/space_md"
                android:paddingVertical="@dimen/space_xs"
                android:text="@string/support_badge"
                android:textColor="#0F6B53"
                android:textSize="11sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_sm"
            android:text="@string/support_subtitle"
            android:textColor="#E6FFFFFF"
            android:textSize="12sp" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/space_lg">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_lg"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="@dimen/card_radius"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/space_lg">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Spinner
                            android:id="@+id/spnCategory"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/field_height"
                            android:layout_weight="1"
                            android:background="@drawable/bg_spinner"
                            android:popupBackground="#FFFFFF"
                            android:spinnerMode="dropdown" />

                        <Space
                            android:layout_width="@dimen/space_sm"
                            android:layout_height="1dp" />

                        <Spinner
                            android:id="@+id/spnPriority"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/field_height"
                            android:layout_weight="1"
                            android:background="@drawable/bg_spinner"
                            android:popupBackground="#FFFFFF"
                            android:spinnerMode="dropdown" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_lg"
                        android:text="@string/support_subject_lbl"
                        android:textColor="#425A52"
                        android:textSize="12sp" />

                    <EditText
                        android:id="@+id/etSubject"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/field_height"
                        android:layout_marginTop="@dimen/space_sm"
                        android:background="@drawable/bg_spinner"
                        android:hint="@string/support_subject_hint"
                        android:inputType="textCapSentences"
                        android:paddingHorizontal="@dimen/space_md"
                        android:textColor="#0A2E25"
                        android:textColorHint="#6B7A74" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_lg"
                        android:text="@string/support_desc_lbl"
                        android:textColor="#425A52"
                        android:textSize="12sp" />

                    <EditText
                        android:id="@+id/etDescription"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_marginTop="@dimen/space_sm"
                        android:background="@drawable/bg_spinner"
                        android:gravity="top|start"
                        android:hint="@string/support_desc_hint"
                        android:inputType="textMultiLine"
                        android:maxLines="6"
                        android:padding="@dimen/space_md"
                        android:textColor="#0A2E25"
                        android:textColorHint="#6B7A74" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_lg"
                        android:text="@string/support_phone_lbl"
                        android:textColor="#425A52"
                        android:textSize="12sp" />

                    <EditText
                        android:id="@+id/etPhone"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/field_height"
                        android:layout_marginTop="@dimen/space_sm"
                        android:background="@drawable/bg_spinner"
                        android:hint="@string/support_phone_hint"
                        android:inputType="phone"
                        android:paddingHorizontal="@dimen/space_md"
                        android:textColor="#0A2E25"
                        android:textColorHint="#6B7A74" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_lg"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/btnAttach"
                            android:layout_width="@dimen/icon_btn_size"
                            android:layout_height="@dimen/icon_btn_size"
                            android:background="@drawable/bg_spinner"
                            android:contentDescription="@string/support_attach"
                            android:padding="@dimen/space_sm"
                            android:src="@android:drawable/ic_menu_camera"
                            android:tint="#0F6B53"
                            tools:ignore="UseAppTint" />

                        <TextView
                            android:id="@+id/tvAttachmentName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/space_md"
                            android:layout_weight="1"
                            android:text="@string/support_no_attachment"
                            android:textColor="#6B7A74"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_xl"
                        android:gravity="end"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btnCancel"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/field_height"
                            android:backgroundTint="#FFFFFF"
                            android:text="@string/support_cancel"
                            android:textColor="#0F6B53" />

                        <Space
                            android:layout_width="@dimen/space_md"
                            android:layout_height="1dp" />

                        <Button
                            android:id="@+id/btnSubmit"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/field_height"
                            android:backgroundTint="#0F6B53"
                            android:text="@string/support_submit"
                            android:textColor="#FFFFFF" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="382dp"
                android:layout_height="244dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="282dp"
                    android:orientation="vertical"></LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#1EB6B6AE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/button4"
            android:layout_width="348dp"
            android:layout_height="78dp"
            android:layout_marginBottom="-13dp"
            android:backgroundTint="#0F6B53"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.507"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.939" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="412dp"
            android:layout_height="78dp"
            android:layout_marginBottom="-10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.949">

            <Button
                android:id="@+id/button8"
                android:layout_width="55dp"
                android:layout_height="60dp"
                android:layout_marginStart="42dp"
                android:layout_marginTop="-2dp"
                android:backgroundTint="#FFFFFF"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.304" />

            <Button
                android:id="@+id/button9"
                android:layout_width="55dp"
                android:layout_height="60dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="-2dp"
                android:backgroundTint="#FFFFFF"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/button6"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.304" />

            <Button
                android:id="@+id/button10"
                android:layout_width="55dp"
                android:layout_height="60dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="-2dp"
                android:backgroundTint="#FFFFFF"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/button9"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.304" />

            <Button
                android:id="@+id/button11"
                android:layout_width="55dp"
                android:layout_height="60dp"
                android:layout_marginStart="-30dp"
                android:layout_marginTop="-2dp"
                android:backgroundTint="#FFFFFF"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/button10"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.304" />

            <Button
                android:id="@+id/button6"
                android:layout_width="55dp"
                android:layout_height="60dp"
                android:layout_marginStart="13dp"
                android:layout_marginTop="-2dp"
                android:backgroundTint="#FFFFFF"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/button8"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.304" />

            <ImageView
                android:id="@+id/imageView23"
                android:layout_width="35dp"
                android:layout_height="35dp"
                app:layout_constraintBottom_toBottomOf="@+id/button8"
                app:layout_constraintEnd_toEndOf="@+id/button8"
                app:layout_constraintStart_toStartOf="@+id/button8"
                app:layout_constraintTop_toTopOf="@+id/button8"
                app:srcCompat="@mipmap/img_5" />

            <ImageView
                android:id="@+id/imageView24"
                android:layout_width="35dp"
                android:layout_height="35dp"
                app:layout_constraintBottom_toBottomOf="@+id/button6"
                app:layout_constraintEnd_toEndOf="@+id/button6"
                app:layout_constraintStart_toStartOf="@+id/button6"
                app:layout_constraintTop_toTopOf="@+id/button6"
                app:srcCompat="@mipmap/img_3" />

            <ImageView
                android:id="@+id/imageView25"
                android:layout_width="37dp"
                android:layout_height="37dp"
                app:layout_constraintBottom_toBottomOf="@+id/button9"
                app:layout_constraintEnd_toEndOf="@+id/button9"
                app:layout_constraintStart_toStartOf="@+id/button9"
                app:layout_constraintTop_toTopOf="@+id/button9"
                app:srcCompat="@mipmap/img_2" />

            <ImageView
                android:id="@+id/imageView26"
                android:layout_width="35dp"
                android:layout_height="35dp"
                app:layout_constraintBottom_toBottomOf="@+id/button10"
                app:layout_constraintEnd_toEndOf="@+id/button10"
                app:layout_constraintStart_toStartOf="@+id/button10"
                app:layout_constraintTop_toTopOf="@+id/button10"
                app:srcCompat="@mipmap/img_4" />

            <ImageView
                android:id="@+id/imageView27"
                android:layout_width="35dp"
                android:layout_height="35dp"
                app:layout_constraintBottom_toBottomOf="@+id/button11"
                app:layout_constraintEnd_toEndOf="@+id/button11"
                app:layout_constraintStart_toStartOf="@+id/button11"
                app:layout_constraintTop_toTopOf="@+id/button11"
                app:srcCompat="@mipmap/img_1" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
