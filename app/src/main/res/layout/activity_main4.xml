<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_cream"
    tools:context=".MainActivity4">

    <!-- Top: logo + name + Skip -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/cd_app_logo"
        app:srcCompat="@mipmap/logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/appName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/app_title"
        android:textColor="@color/text_primary"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/logo"
        app:layout_constraintTop_toTopOf="@id/logo"
        app:layout_constraintBottom_toBottomOf="@id/logo" />

    <TextView
        android:id="@+id/skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/skip"
        android:textColor="@color/text_muted"
        android:textSize="14sp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Feature card (4:3, slight tilt) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/featureCard"
        android:layout_width="350dp"
        android:layout_height="262dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="24dp"
        android:rotation="-6"
        app:cardBackgroundColor="#673AB7"
        app:cardCornerRadius="28dp"
        app:layout_constraintDimensionRatio="4:3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logo">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="347dp"
            android:layout_height="257dp"
            android:padding="28dp"
            android:scaleType="centerInside"
            app:srcCompat="@mipmap/tracking" />
        <!-- Prefer @drawable/tracking if it's not a launcher icon -->
    </com.google.android.material.card.MaterialCardView>

    <!-- Badge bubble overlapping card -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/badgeBubble"
        android:layout_width="36dp"
        android:layout_height="36dp"
        app:fabCustomSize="36dp"
        app:backgroundTint="@android:color/white"
        app:tint="@color/green_primary"
        app:srcCompat="@drawable/ic_check_badge"
        android:contentDescription="@string/cd_info_bubble"
        app:layout_constraintTop_toTopOf="@id/featureCard"
        app:layout_constraintEnd_toEndOf="@id/featureCard"
        android:translationX="12dp"
        android:translationY="-12dp" />

    <!-- Title / Subtitle / Body -->

    <!-- Bottom dots -->

    <!-- CTA gradient card -->

    <TextView
        android:id="@+id/title"
        android:layout_width="203dp"
        android:layout_height="39dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="24dp"
        android:text="@string/onb_title_request_tracking"
        android:textColor="@color/text_primary"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/featureCard" />

    <TextView
        android:id="@+id/body"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="24dp"
        android:lineSpacingExtra="2dp"
        android:text="@string/onb_body_request_tracking"
        android:textColor="@color/text_muted"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/subtitle" />

    <TextView
        android:id="@+id/subtitle"
        android:layout_width="153dp"
        android:layout_height="20dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="24dp"
        android:text="@string/onb_subtitle_stay_updated"
        android:textColor="@color/green_primary"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title" />

    <TextView
        android:id="@+id/bottomDots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        android:text="@string/onb_dots_page3"
        android:textColor="@color/green_primary"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@id/ctaCard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/ctaCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="24dp"
        app:cardCornerRadius="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/bg_ready_gradient">

            <TextView
                android:id="@+id/ctaTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="6dp"
                android:paddingBottom="4dp"
                android:text="@string/cta_ready"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ctaSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/cta_subtitle"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnContinueLogin"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="12dp"
                android:backgroundTint="@android:color/white"
                android:text="@string/continue_to_login"
                android:textAllCaps="false"
                android:textColor="@color/green_primary"
                android:textStyle="bold"
                app:cornerRadius="22dp" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
